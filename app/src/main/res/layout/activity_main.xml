<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".MainActivity">

    <!-- Display area -->

    <!-- Number and operation buttons -->

    <TextView
        android:id="@+id/tvDisplay"
        android:layout_width="match_parent"
        android:layout_height="352dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:background="#E7E8DA"
        android:gravity="end|bottom"
        android:padding="16dp"
        android:text="0"
        android:textColor="#000000"
        android:textSize="48sp"
        android:textStyle="bold" />

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="372dp"
        android:layout_below="@id/tvDisplay"
        android:layout_marginTop="7dp"
        android:columnCount="4"
        android:padding="16dp"
        android:rowCount="5">

        <!-- Row 1 -->

        <Button
            android:id="@+id/buttonClear"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:backgroundTint="#FFA726"
            android:onClick="onClearClick"
            android:text="C"
            android:textColor="#D80B0B" />

        <Button
            android:id="@+id/buttonDivide"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:backgroundTint="#FFA726"
            android:onClick="onOperationClick"
            android:text="/"
            android:textColor="#E91E63" />

        <Button
            android:id="@+id/buttonMultiply"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:backgroundTint="#FFA726"
            android:onClick="onOperationClick"
            android:text="*"
            android:textColor="#1C1818" />

        <Button
            android:id="@+id/buttonSubtract"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:backgroundTint="#FFA726"
            android:onClick="onOperationClick"
            android:text="-"
            android:textColor="#090606" />

        <!-- Row 2 -->
        <Button
            android:id="@+id/button7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:backgroundTint="#EEEEEE"
            android:onClick="onNumberClick"
            android:text="7"
            android:textColor="#000000" />

        <Button
            android:id="@+id/button8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:backgroundTint="#EEEEEE"
            android:onClick="onNumberClick"
            android:text="8"
            android:textColor="#000000" />

        <Button
            android:id="@+id/button9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:backgroundTint="#EEEEEE"
            android:onClick="onNumberClick"
            android:text="9"
            android:textColor="#000000" />

        <Button
            android:id="@+id/buttonAdd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:backgroundTint="#FFA726"
            android:onClick="onOperationClick"
            android:text="+"
            android:textColor="#8BC34A" />

        <!-- Row 3 -->
        <Button
            android:id="@+id/button4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:backgroundTint="#EEEEEE"
            android:onClick="onNumberClick"
            android:text="4"
            android:textColor="#000000" />

        <Button
            android:id="@+id/button5"
            style="@style/Widget.Material3.ExtendedFloatingActionButton.Tertiary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:backgroundTint="#EEEEEE"
            android:onClick="onNumberClick"
            android:text="5"
            android:textColor="#000000" />

        <Button
            android:id="@+id/button6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:backgroundTint="#EEEEEE"
            android:onClick="onNumberClick"
            android:text="6"
            android:textColor="#000000" />

        <Button
            android:id="@+id/buttonSubtract"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:backgroundTint="#FFA726"
            android:onClick="onOperationClick"
            android:text="-"
            android:textColor="#130F0F" />

        <!-- Row 4 -->
        <Button
            android:id="@+id/button1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:backgroundTint="#EEEEEE"
            android:onClick="onNumberClick"
            android:text="1"
            android:textColor="#000000" />

        <Button
            android:id="@+id/button2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:backgroundTint="#EEEEEE"
            android:onClick="onNumberClick"
            android:text="2"
            android:textColor="#000000" />

        <Button
            android:id="@+id/button3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:backgroundTint="#EEEEEE"
            android:onClick="onNumberClick"
            android:text="3"
            android:textColor="#000000" />

        <Button
            android:id="@+id/buttonAdd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:backgroundTint="#FFA726"
            android:onClick="onOperationClick"
            android:text="+"
            android:textColor="#CDDC39" />

        <!-- Row 5 -->
        <Button
            android:id="@+id/button0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="2"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:backgroundTint="#EEEEEE"
            android:onClick="onNumberClick"
            android:text="0"
            android:textColor="#000000" />

        <Button
            android:id="@+id/buttonDecimal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:backgroundTint="#EEEEEE"
            android:onClick="onNumberClick"
            android:text="."
            android:textColor="#000000" />

        <Button
            android:id="@+id/buttonEquals"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:backgroundTint="#FFA726"
            android:onClick="onEqualsClick"
            android:text="="
            android:textColor="#F44336" />
    </GridLayout>


</RelativeLayout>
